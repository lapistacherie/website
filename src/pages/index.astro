---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSlider from '../components/HeroSlider.astro';
import ProductCard from '../components/ProductCard.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

// Get all products and filter featured ones
const allProducts = await getCollection('products');
const featuredProducts = allProducts.filter(product => product.data.featured);

// Get products by category for collection showcase
const collections = [
  {
    name: 'Everyday Gourmet',
    slug: 'everyday-gourmet',
    description: 'Daily delights for the gourmet enthusiast',
    image: `${base}/images/collections/everyday-gourmet.jpg`,
  },
  {
    name: 'Jar Collection',
    slug: 'jar-collection',
    description: 'Premium selections in elegant reusable jars',
    image: `${base}/images/collections/jar-collection.jpg`,
  },
  {
    name: 'Signature Collection',
    slug: 'signature-collection',
    description: 'Curated luxury blends for discerning tastes',
    image: `${base}/images/collections/signature-collection.jpg`,
  },
  {
    name: 'Festive Gifting',
    slug: 'festive-gifting',
    description: 'Celebrate special moments with thoughtful gifts',
    image: `${base}/images/collections/festive-gifting.jpg`,
  },
];
---

<Layout title="La Pistacherie - Premium Dry Fruits & Nuts">
  <Header />

  <main>
    <!-- Hero Slider -->
    <HeroSlider />

    <!-- A Gift of Health, Wealth, and Tradition Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div class="order-2 lg:order-1">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              A Gift of Health, Wealth, and Tradition
            </h2>
            <p class="text-lg text-gray-700 mb-6">
              Dry fruits and nuts, deeply rooted in the abundant heritage and cultural traditions of India, hold a profound emotional connection, making them a premier choice for gifting.
            </p>
            <p class="text-lg text-gray-700">
              The team à LA PISTACHERIE is committed to transforming our beloved customs into thoughtful favours, a heartfelt gesture aimed at sharing our heritage with our valued clients.
            </p>
          </div>
          <div class="order-1 lg:order-2">
            <img
              src={`${base}/images/gift-tradition.jpg`}
              alt="A Gift of Health, Wealth, and Tradition"
              class="rounded-lg shadow-lg w-full h-auto"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Products Section -->
    {featuredProducts.length > 0 && (
      <section class="py-16 bg-white">
        <div class="container mx-auto px-4 max-w-7xl">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
              Featured Products
            </h2>
            <p class="text-gray-600 max-w-2xl mx-auto">
              Discover our handpicked selection of premium dry fruits and nuts
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {featuredProducts.map((product) => (
              <ProductCard
                title={product.data.title}
                price={product.data.price}
                category={product.data.category}
                slug={product.slug}
                image={product.data.images[0]}
                featured={product.data.featured}
              />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Collections Overview -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Our Collections
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Explore our curated collections of premium dry fruits and nuts
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {collections.map((collection) => (
            <a
              href={`${base}/products/${collection.slug}`}
              class="group bg-white rounded-lg overflow-hidden border border-[#D4AF37]/30 shadow-sm hover:shadow-[0_8px_30px_rgb(212,175,55,0.15)] hover:border-[#D4AF37] transition-all duration-300"
            >
              <div class="aspect-square relative overflow-hidden">
                <img
                  src={collection.image}
                  alt={collection.name}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end">
                  <div class="text-white p-6 w-full">
                    <h3 class="text-2xl font-bold mb-2">{collection.name}</h3>
                    <p class="text-sm opacity-90">{collection.description}</p>
                  </div>
                </div>
              </div>
              <div class="p-4 text-center">
                <span class="text-[#39441E] font-semibold group-hover:underline">
                  View Collection →
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="max-w-4xl mx-auto mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
            Our Story
          </h2>

          <div class="text-center">
            <p class="text-lg text-gray-700 mb-6">
              La Pistacherie brings you premium quality dry fruits and nuts rooted in Indian cultural heritage.
              We believe in the tradition of gifting dry fruits as a symbol of prosperity, health, and celebration.
            </p>
            <p class="text-lg text-gray-700">
              Each product is carefully selected, processed, and packaged to ensure you receive only the finest quality.
              Whether you're looking for a healthy snack, gourmet ingredients, or the perfect gift,
              we have something special for every occasion.
            </p>
          </div>
        </div>
      </div>

        <div class="max-w-4xl mx-auto">
          <div class="mb-8 rounded-lg overflow-hidden shadow-lg">
            <video
              class="w-full"
              controls
              preload="metadata"
              poster={`${base}/videos/our-story-poster.jpg`}
            >
              <source src="https://lapistacherie.in/cdn/shop/videos/c/vp/fc16e720837f44d2a3f76377f0c025cb/fc16e720837f44d2a3f76377f0c025cb.HD-1080p-7.2Mbps-18487939.mp4" type="video/mp4" />
              Your browser does not support the video tag.
            </video>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
