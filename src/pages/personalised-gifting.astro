---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Personalised Gifting - La Pistacherie">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="bg-[#39441E] text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          Personalised Gifting
        </h1>
        <p class="text-xl max-w-2xl mx-auto opacity-90">
          Joie de Vivre in Every Luxe Personal Gift!
        </p>
      </div>
    </section>

    <!-- Introduction -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-4xl text-center">
        <p class="text-lg text-gray-700 mb-6">
          At LA PISTACHERIE, we believe that the act of gifting transforms into something truly exceptional when it's crafted with deep thought and care.
        </p>
        <p class="text-lg text-gray-700">
          Luxury is deeply personal, and our mission is to ensure that it's flawlessly tailored just for you. Whether it's a special occasion or a corporate gift, we offer bespoke hampers that are meticulously designed according to your desires.
        </p>
      </div>
    </section>

    <!-- Showcase Section 1 - Image Left -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="order-2 lg:order-1">
            <img
              src={`${base}/images/personalized-gifting/hamper-1.jpg`}
              alt="100+ Faux Leather Baskets"
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              100+ Faux Leather Baskets
            </h2>
            <p class="text-lg text-gray-700">
              Anniversary favors featuring premium dry fruits and stuffed dates with personalized message cards
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Showcase Section 2 - Image Right -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Vintage Faux Leather Trunk Hampers
            </h2>
            <p class="text-lg text-gray-700">
              Curated with artisanal nuts and dry fruits
            </p>
          </div>
          <div>
            <img
              src={`${base}/images/personalized-gifting/hamper-2.jpg`}
              alt="Vintage Faux Leather Trunk Hampers"
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Showcase Section 3 - Image Left -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="order-2 lg:order-1">
            <img
              src={`${base}/images/personalized-gifting/hamper-3.jpg`}
              alt="Exclusive Faux Leather Dry Fruit Platter"
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Exclusive Faux Leather Dry Fruit Platter
            </h2>
            <p class="text-lg text-gray-700">
              Standalone luxury item
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Showcase Section 4 - Image Right -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Vintage Faux Leather Basket
            </h2>
            <p class="text-lg text-gray-700">
              Adorned with blooms, wooden candle bowl, premium dry fruits and signature collection
            </p>
          </div>
          <div>
            <img
              src={`${base}/images/personalized-gifting/hamper-4.jpg`}
              alt="Vintage Faux Leather Basket"
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Showcase Section 5 - Image Left -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="order-2 lg:order-1">
            <img
              src={`${base}/images/personalized-gifting/hamper-5.jpg`}
              alt="Luxurious Engagement Favours"
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Luxurious Engagement Favours
            </h2>
            <p class="text-lg text-gray-700">
              150+ customized boxes of signature medley collection
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Showcase Section 6 - Image Right -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Classic Acrylic Box
            </h2>
            <p class="text-lg text-gray-700">
              Pearl-adorned with organza, satin, peony candle, and gourmet selections in royal signature packaging
            </p>
          </div>
          <div>
            <img
              src={`${base}/images/personalized-gifting/hamper-6.jpg`}
              alt="Classic Acrylic Box"
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
