---
interface Props {
  title: string;
  description: string;
  price: number;
  category: string;
  slug: string;
  image?: string;
  featured?: boolean;
}

const { title, description, price, category, slug, image, featured = false } = Astro.props;

const categoryLabels: Record<string, string> = {
  'everyday-gourmet': 'Everyday Gourmet',
  'jar-collection': 'Jar Collection',
  'signature-collection': 'Signature Collection',
  'festive-gifting': 'Festive Gifting',
};
---

<article class="bg-white rounded-lg overflow-hidden border border-[#D4AF37]/30 shadow-sm hover:shadow-[0_8px_30px_rgb(212,175,55,0.15)] hover:border-[#D4AF37] transition-all duration-300">
  <a href={`/products/${category}/${slug}`} class="block">
    <!-- Product Image -->
    <div class="relative aspect-square bg-gray-200">
      {image ? (
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-gray-400">
          <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      )}

      {featured && (
        <span class="absolute top-2 right-2 bg-[#39441E] text-white text-xs px-2 py-1 rounded">
          Featured
        </span>
      )}
    </div>

    <!-- Product Info -->
    <div class="p-4">
      <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">
        {categoryLabels[category] || category}
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
        {title}
      </h3>
      <p class="text-gray-600 text-sm mb-4 line-clamp-2">
        {description}
      </p>
      <div class="flex items-center justify-between">
        <span class="text-2xl font-bold text-[#39441E]">
          ₹{price}
        </span>
        <span class="text-sm text-gray-500 hover:text-[#39441E] transition-colors">
          View Details →
        </span>
      </div>
    </div>
  </a>
</article>
