---
import { CONTACT, SOCIAL_MEDIA, COMPANY } from '../constants';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;
const currentYear = new Date().getFullYear();

// Get all categories dynamically for footer
const allCategories = await getCollection('categories');
---

<footer class="bg-white text-gray-900 mt-16 border-t border-gray-200">
  <div class="container mx-auto px-4 py-12 max-w-7xl">
    <!-- Our Mission Section -->
    <div class="mb-12 pb-8 border-b border-gray-200">
      <h3 class="text-2xl font-bold mb-4 text-center text-gray-900">Our Mission</h3>
      <p class="text-gray-700 text-center max-w-4xl mx-auto text-lg">
        {COMPANY.mission}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- About Column -->
      <div>
        <img
          src={`/images/logo.png`}
          alt="La Pistacherie"
          class="h-12 w-auto mb-4"
        />
        <p class="text-gray-600 text-sm">
          Premium quality dry fruits and nuts, rooted in Indian cultural heritage.
          Perfect for gifting and gourmet experiences.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-gray-900">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li><a href={base} class="text-gray-600 hover:text-[#39441E] transition-colors">Home</a></li>
          <li><a href={`/products`} class="text-gray-600 hover:text-[#39441E] transition-colors">Our Products</a></li>
          <li><a href={`/about`} class="text-gray-600 hover:text-[#39441E] transition-colors">About Us</a></li>
          <li><a href={`/contact`} class="text-gray-600 hover:text-[#39441E] transition-colors">Contact</a></li>
        </ul>
      </div>

      <!-- Product Collections -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-gray-900">Collections</h3>
        <ul class="space-y-2 text-sm">
          {allCategories.map(cat => (
            <li>
              <a
                href={`/products/${cat.data.id}`}
                class="text-gray-600 hover:text-[#39441E] transition-colors"
              >
                {cat.data.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-gray-900">Get In Touch</h3>
        <ul class="space-y-2 text-sm text-gray-600">
          <li>Email: {CONTACT.email.info}</li>
          <li>Phone: {CONTACT.phone}</li>
          <li class="flex space-x-4 mt-4">
            <a href={SOCIAL_MEDIA.facebook} target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-[#39441E] transition-colors" aria-label="Facebook">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href={SOCIAL_MEDIA.instagram} target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-[#39441E] transition-colors" aria-label="Instagram">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-200 mt-8 pt-8 text-center text-sm text-gray-500">
      <p>&copy; {currentYear} {COMPANY.name}. All rights reserved.</p>
    </div>
  </div>
</footer>
