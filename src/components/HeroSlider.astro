---
const base = import.meta.env.BASE_URL;

const slides = [
  {
    title: "Premium Dry Fruits & Nuts",
    description: "Discover our curated selection of finest quality dry fruits",
    image: "/images/hero-1.jpg",
    cta: "Shop Now",
    link: "/products"
  },
  {
    title: "Perfect for Gifting",
    description: "Beautifully packaged collections for every occasion",
    image: "/images/hero-2.jpg",
    cta: "View Collections",
    link: "/products/festive-gifting"
  },
  {
    title: "Signature Collections",
    description: "Experience luxury with our premium signature blends",
    image: "/images/hero-3.jpg",
    cta: "Explore",
    link: "/products/signature-collection"
  }
];
---

<div class="hero-slider relative w-full h-[500px] md:h-[600px] overflow-hidden">
  <div class="swiper h-full">
    <div class="swiper-wrapper">
      {slides.map((slide, index) => (
        <div class="swiper-slide relative">
          <div class="absolute inset-0 bg-linear-to-r from-black/60 to-black/30 z-10"></div>
          <div
            class="w-full h-full bg-cover bg-center"
            style={`background-image: url('${base}/${slide.image}'); background-color: #39441E;`}
          ></div>
          <div class="absolute inset-0 z-20 flex items-center">
            <div class="container mx-auto px-4 max-w-7xl">
              <div class="max-w-2xl text-white">
                <h1 class="text-4xl md:text-6xl font-bold mb-4">
                  {slide.title}
                </h1>
                <p class="text-xl md:text-2xl mb-8">
                  {slide.description}
                </p>
                <a
                  href={base.concat(slide.link)}
                  class="inline-block bg-white text-[#39441E] px-8 py-3 rounded-md font-semibold hover:bg-gray-100 transition-colors"
                >
                  {slide.cta}
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Navigation buttons -->
    <!-- <div class="swiper-button-next text-white"></div> -->
    <!-- <div class="swiper-button-prev text-white"></div> -->

    <!-- Pagination -->
    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  new Swiper('.swiper', {
    modules: [Navigation, Pagination, Autoplay],
    loop: true,
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
  });
</script>

<style>
  :root {
  --swiper-theme-color: #d4af37 !important;
  }
  .swiper-button-next,
  .swiper-button-prev {
    color: white;
  }

  .swiper-pagination-bullet {
    background: white;
  }

  .swiper-pagination-bullet-active {
    background: white !important;
  }
</style>
